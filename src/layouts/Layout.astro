---
interface Props {
	title?: string;
}

const { title = "広島Unity勉強会" } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header>
			<div class="container">
				<h1><a href="/">{title}</a></h1>
				<nav>
					<ul>
						<li><a href="/">ホーム</a></li>
						<li><a href="/news">ニュース</a></li>
						<li><a href="/about">活動について</a></li>
						<li><a href="/mokumoku">もくもく会</a></li>
						<li><a href="/contact">お問い合わせ</a></li>
					</ul>
				</nav>
			</div>
		</header>

		<main class="container">
			<slot />
		</main>

		<footer>
			<div class="container">
				<p>&copy; 2024 広島Unity勉強会. All rights reserved.</p>
				<p><small>※広島Unity勉強会はUnity Technologies社およびその関連団体とは関係ありません。</small></p>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	:root {
		--primary: #2c3e50;
		--secondary: #34495e;
		--accent: #3498db;
		--text: #333;
		--bg: #f8f9fa;
		--white: #ffffff;
		--container-width: 960px;
	}

	* {
		box-sizing: border-box;
	}

	body {
		font-family: 'Helvetica Neue', Arial, 'Hiragino Kaku Gothic ProN', 'Hiragino Sans', Meiryo, sans-serif;
		line-height: 1.6;
		color: var(--text);
		background-color: var(--bg);
		margin: 0;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}

	.container {
		max-width: var(--container-width);
		margin: 0 auto;
		padding: 0 20px;
	}

	header {
		background-color: var(--primary);
		color: var(--white);
		padding: 1rem 0;
	}

	header h1 {
		margin: 0;
		font-size: 1.5rem;
	}

	header h1 a {
		color: var(--white);
		text-decoration: none;
	}

	nav ul {
		list-style: none;
		padding: 0;
		margin: 1rem 0 0;
		display: flex;
		gap: 1.5rem;
		flex-wrap: wrap;
	}

	nav a {
		color: var(--white);
		text-decoration: none;
		font-weight: bold;
	}

	nav a:hover {
		text-decoration: underline;
	}

	main {
		flex: 1;
		padding: 2rem 20px;
		background-color: var(--white);
		margin-top: 2rem;
		margin-bottom: 2rem;
		box-shadow: 0 2px 5px rgba(0,0,0,0.1);
		border-radius: 4px;
	}

	footer {
		background-color: var(--secondary);
		color: var(--white);
		text-align: center;
		padding: 2rem 0;
		margin-top: auto;
	}

	h2 {
		border-bottom: 2px solid var(--accent);
		padding-bottom: 0.5rem;
		margin-top: 2rem;
	}

	h3 {
		margin-top: 1.5rem;
	}

	a {
		color: var(--accent);
	}

	@media (max-width: 600px) {
		nav ul {
			gap: 1rem;
		}
		header h1 {
			text-align: center;
		}
		nav ul {
			justify-content: center;
		}
	}
</style>
