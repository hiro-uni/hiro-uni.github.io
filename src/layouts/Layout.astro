---
interface Props {
	title?: string;
}

const { title = "広島Unity勉強会" } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header>
			<div class="container">
				<a href="/" class="logo-link">
					<img src="/hirouni.png" alt="広島Unity勉強会" class="header-logo" />
				</a>
				<nav>
					<ul>
						<li><a href="/">ホーム</a></li>
						<li><a href="/news">ニュース</a></li>
						<li><a href="/about">活動について</a></li>
						<li><a href="/mokumoku">もくもく会</a></li>
						<li><a href="/contact">お問い合わせ</a></li>
						<li><a href="/ggj25_interview/interview">インタビュー</a></li>
					</ul>
				</nav>
			</div>
		</header>

		<main class="container">
			<h3 class="page-title">{title}</h3>
			<slot />
		</main>

		<footer>
			<div class="container">
				<p>&copy; 2014-2026 広島Unity勉強会</p>
				<p><small>広島Unity勉強会 は Unity Technologies社、Unity Japan およびその関連団体とは何ら関係がありません。</small></p>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	:root {
		--primary: #ffffffff;
		--secondary: #b30b54ff;
		--accent: #3498db;
		--text: #333;
		--bg: #f8f9fa;
		--white: #ffffff;
		--container-width: 960px;
	}

	* {
		box-sizing: border-box;
	}

	body {
		font-family: 'Helvetica Neue', Arial, 'Hiragino Kaku Gothic ProN', 'Hiragino Sans', Meiryo, sans-serif;
		line-height: 1.6;
		color: var(--text);
		background-color: var(--bg);
		margin: 0;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}

	.container {
		width: 100%;
		max-width: var(--container-width);
		margin: 0 auto;
		padding: 0 20px;
	}

	header {
		background-color: var(--white);
		color: var(--text);
		padding: 1.5rem 0;
		border-bottom: 1px solid #eee;
	}

	header .container {
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.logo-link {
		display: block;
		margin-bottom: 0.5rem;
	}

	.header-logo {
		height: 60px;
		width: auto;
		display: block;
	}

	nav {
		width: 100%;
	}

	nav ul {
		list-style: none;
		padding: 0;
		margin: 0.5rem 0 0;
		display: flex;
		justify-content: center;
		gap: 1.5rem;
		flex-wrap: wrap;
	}

	nav a {
		color: var(--text);
		text-decoration: none;
		font-weight: bold;
		font-size: 0.9rem;
		transition: color 0.2s;
	}

	nav a:hover {
		color: var(--secondary);
		text-decoration: none;
	}

	main {
		flex: 1;
		padding: 2rem 20px 4rem;
		background-color: var(--white);
		margin-top: 2rem;
		margin-bottom: 2rem;
		box-shadow: 0 4px 15px rgba(0,0,0,0.05);
		border-radius: 8px;
	}

	.page-title {
		font-size: 2.2rem;
		color: var(--text);
		margin-bottom: 2rem;
		padding-bottom: 1rem;
		border-bottom: 4px solid var(--secondary);
		line-height: 1.2;
		font-weight: 800;
	}

	footer {
		background-color: var(--secondary);
		color: var(--white);
		text-align: center;
		padding: 2rem 0;
		margin-top: auto;
	}

	h2 {
		border-bottom: 2px solid var(--accent);
		padding-bottom: 0.5rem;
		margin-top: 2rem;
	}

	h3 {
		margin-top: 1.5rem;
	}

	a {
		color: var(--accent);
	}

	@media (max-width: 600px) {
		nav ul {
			gap: 1rem;
		}
		header h1 {
			text-align: center;
		}
		nav ul {
			justify-content: center;
		}
	}
</style>
