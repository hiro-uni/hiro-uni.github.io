---
import Layout from '../../layouts/Layout.astro';
import InterviewCard from '../../components/interview/InterviewCard.astro';

// Import hero images
import heroGGJ26 from '../../assets/ggj26_organizer/hero_ggj26_setouchi.png';
import heroGGJ25 from '../../assets/ggj25_interview/raptor4.png';

const interviews2 = [
  {
    href: "/interview/ggj26_organizer/page",
    title: "【GGJ26瀬戸内】瀬戸内ゲーム開発コミュニティ オーガナイザートーク",
    image: heroGGJ26,
    date: "2026.02.15",
    category: "トーク"
  },
  {
    href: "/interview/ggj25/page",
    title: "【特別企画】 恐竜好きが紡いだGGJ＆TGSスカラシップと「好きを伝える力」",
    image: heroGGJ25,
    date: "2026.01.12",
    category: "インタビュー"
  }
];

const interviews = [
  {
    href: "/interview/ggj25/page",
    title: "【特別企画】 恐竜好きが紡いだGGJ＆TGSスカラシップと「好きを伝える力」",
    image: heroGGJ25,
    date: "2026.01.12",
    category: "インタビュー"
  }
];

---

<Layout title="インタビュー">
	<p>広島のゲームクリエイター、瀬戸内ゲーム制作コミュニティメンバーへのインタビューを掲載しています。</p>
  <div class="interview-index">

    <div class="interview-grid">
      {interviews.map((interview) => (
        <InterviewCard {...interview} />
      ))}
    </div>
  </div>
</Layout>

<style>
  .interview-index {
    max-width: 1100px;
    margin: 0 auto;
    padding: 4rem 1.5rem;
  }

  .page-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .page-title {
    font-size: 3rem;
    font-weight: 900;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
    color: #222;
    position: relative;
    display: inline-block;
  }

  .page-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 4px;
    background: var(--secondary, #e43983);
    border-radius: 2px;
  }

  .page-description {
    color: #666;
    font-size: 1.1rem;
    max-width: 600px;
    margin: 1.5rem auto 0;
    line-height: 1.6;
  }

  .interview-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2.5rem;
  }

  @media (max-width: 768px) {
    .interview-index {
      padding: 3rem 1rem;
    }
    .page-title {
      font-size: 2.2rem;
    }
    .interview-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
</style>
