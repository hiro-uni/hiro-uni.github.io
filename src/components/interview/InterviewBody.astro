    line-height: 1.9;
    margin-bottom: 2rem;
  }

  .content-wrapper > h2 {
    font-size: 1.8rem;
    margin: 4rem 0 2rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--primary, #000);
