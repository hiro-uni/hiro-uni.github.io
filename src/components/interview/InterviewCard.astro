---
import { Image } from 'astro:assets';

interface Props {
  href: string;
  title: string;
  image: any;
  date: string;
  category: string;
}

const { href, title, image, date, category } = Astro.props;
---

<a href={href} class="interview-card">
  <div class="card-image">
    {typeof image === 'string' ? (
      <img src={image} alt={title} loading="lazy" />
    ) : (
      <Image src={image} alt={title} />
    )}
  </div>
  <div class="card-content">
    <div class="card-header">
      <span class="category">{category}</span>
    </div>
    <h3 class="card-title">{title}</h3>
    <div class="card-footer">
      <span class="date">
        <i class="fa-regular fa-clock"></i> {date}
      </span>
    </div>
  </div>
</a>

<style>
  .interview-card {
    display: flex;
    flex-direction: column;
    background: #fff;
    border-radius: 12px;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    height: 100%;
  }

  .interview-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.12);
  }

  .interview-card:hover .card-image img {
    transform: scale(1.05);
  }

  .card-image {
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: #f0f0f0;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .card-content {
    padding: 1.25rem;
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .card-header {
    margin-bottom: 0.75rem;
  }

  .category {
    display: inline-block;
    padding: 0.2rem 0.8rem;
    background: #f0f0f0;
    color: #555;
    font-size: 0.75rem;
    font-weight: 700;
    border-radius: 50px;
    letter-spacing: 0.02em;
  }

  .card-title {
    font-size: 1.1rem;
    line-height: 1.4;
    font-weight: 800;
    margin: 0 0 1rem 0;
    color: #222;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    flex: 1;
  }

  .card-footer {
    border-top: 1px solid #f0f0f0;
    padding-top: 0.75rem;
    margin-top: auto;
  }

  .date {
    font-size: 0.8rem;
    color: #888;
    display: flex;
    align-items: center;
    gap: 0.4rem;
  }

  @media (max-width: 640px) {
    .card-title {
      font-size: 1rem;
    }
  }
</style>
