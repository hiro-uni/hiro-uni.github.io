---
interface Props {
  title: string;
  category: string;
  date: string;
  heroImage: string;
  heroAlt: string;
}

const { title, category, date, heroImage, heroAlt } = Astro.props;
---

<header class="interview-header">
  <div class="category">{category}</div>
  <h1 class="title">{title}</h1>
  <div class="meta">
    <time datetime={date}>{date}</time>
  </div>
  <div class="hero">
    <img src={heroImage} alt={heroAlt} />
  </div>
</header>

<style>
  .interview-header {
    margin-bottom: 3rem;
    text-align: center;
  }

  .category {
    display: inline-block;
    background: #000;
    color: #fff;
    padding: 2px 12px;
    font-size: 0.8rem;
    font-weight: bold;
    margin-bottom: 1rem;
    letter-spacing: 0.1em;
  }

  .title {
    font-size: 2.5rem;
    line-height: 1.3;
    margin: 0 auto 1.5rem;
    max-width: 900px;
    font-weight: 800;
    letter-spacing: -0.02em;
  }

  .meta {
    font-size: 0.9rem;
    color: #666;
    margin-bottom: 2rem;
  }

  .hero {
    margin: 0 -20px;
  }

  .hero img {
    width: 100%;
    height: auto;
    display: block;
    max-height: 600px;
    object-fit: cover;
  }

  @media (max-width: 768px) {
    .title {
      font-size: 1.8rem;
    }
  }
</style>
